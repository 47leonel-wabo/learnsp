<h1>{{header}}</h1>
<p>{{intro}}</p>
<h3>User Profile</h3>
<ul>
    <li>Username: {{authentication.name}}</li>
    <li>Authorities: {{authentication.authorities}}</li>
</ul>
<form action="/logout" method="post">
    {{#_csrf}}<input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">{{/_csrf}}
    <button type="submit">Logout</button>
</form>
<ol>
    {{#videos}}
    <li>
        {{name}}
        <form action="/delete/videos/{{id}}" method="post">
            {{#_csrf}}<input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">{{/_csrf}}
            <button type="submit">Delete</button>
        </form>
    </li>
    {{/videos}}
</ol>
<form method="post" action="/new-video">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name">
    <label for="description">Description:</label>
    <input type="text" id="description" name="description">
    {{#_csrf}}<input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}">{{/_csrf}}
    <button type="submit">Submit</button>
</form>